import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from scipy.stats import poisson

ALL = pd.read_csv('NHL_ALL.csv')  # Read NHL_ALL file

# Create subset data frames by situation
NHL_ALL = ALL[ALL['situation'] == 'all']

# Take necessary columns/discard auxillary data
NHL_ALL = pd.DataFrame(NHL_ALL[["playerTeam", "opposingTeam", "gameId", "goalsFor", "goalsAgainst"]]).set_index('gameId')

# create array of all team names
TEAMS = NHL_ALL['playerTeam'].unique()

print(NHL_ALL.head())
